{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,

    /* absolute paths */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./packages/*"],
      "@dotori-contexts/*": ["./packages/dotori-contexts/packages/*"],
      "@dotori-utils/*": ["./packages/dotori-utils/packages/*"],
      "@dotori-hooks/*": ["./packages/dotori-hooks/packages/*"],
      "@dotori-icons/*": ["./packages/dotori-icons/packages/*"]
    }
  },
  "include": ["src", "packages", ".eslintrc.js", "jest.config.ts", "jest.setup.ts", "**/types"],
  "exclude": ["./node_modules/**/*", "./packages/**/lib"]
}

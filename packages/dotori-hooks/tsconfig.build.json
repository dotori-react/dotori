{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    /* Publish */
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "importHelpers": true
  },
  "include": ["./packages"],
  "exclude": ["node_modules", "**/__tests__/**", "**/test/**"]
}
